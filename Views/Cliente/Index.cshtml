@model IEnumerable<Mineralab.Models.Cliente>

@{
    var count = 1;
}

<div class="container">
    <h2>Registros</h2><br>
    <form class="form-inline" asp-action="Buscar">
        <div class="form-group mx-sm-3 mb-2">
            <input type="text" class="form-control" name="client" placeholder="Buscar cliente">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Buscar</button>
    </form><br>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>                  
                <th scope="col">
                    â„–
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ruc)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.telefono)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th scope="col" colspan="2">
                    @Html.DisplayNameFor(model => model.direccion)
                </th>
            </tr>
        </thead>

        <tbody>

        @if (Model.Count() == 0) {
            <tr>
                <td colspan="6" class="text-center">No se encontraron resultados</td>
            </tr><br>
        }

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @count
                </th>
                <td>
                    <a href="~/Guia/Index?id=@item.id">@Html.DisplayFor(modelItem => item.nombre)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ruc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <th scope="row">
                    <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-primary active" role="button">Editar</a> 
                    <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger active" role="button" onclick="return confirm('Esta seguro que desea eliminar? : @item.id ')">Eliminar</a>
                </th>
            </tr>
            count++;
        }        
        </tbody> 
    </table>
    <a class="btn btn-success float-right" role="button" asp-action="Crear">Registrar</a><br>
</div>